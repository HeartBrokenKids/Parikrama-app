<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextForumTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Forum Title"/>

    <EditText
        android:id="@+id/editTextDiscussionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Discussion Title"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextDiscussionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Discussion Content"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonCreateForum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Forum"
        android:layout_marginTop="16dp"/>
</LinearLayout>
